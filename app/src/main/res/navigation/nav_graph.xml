<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.thatshot.view.home.HomeFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/goToViewRecipeFragment"
            app:destination="@id/viewRecipeFragment" />
        <action
            android:id="@+id/goToAddRecipeFragment"
            app:destination="@id/addRecipeFragment" />
    </fragment>
    <fragment
        android:id="@+id/addRecipeFragment"
        android:name="com.example.thatshot.view.add_recipe.AddRecipeFragment"
        android:label="@string/add_recipe"
        tools:layout="@layout/fragment_add_recipe">
        <action
            android:id="@+id/goToHomeFragment"
            app:destination="@id/homeFragment" />
    </fragment>
    <fragment
        android:id="@+id/viewRecipeFragment"
        android:name="com.example.thatshot.view.view_recipe.ViewRecipeFragment"
        android:label="View Recipe"
        tools:layout="@layout/fragment_view_recipe">
        <action
            android:id="@+id/goToEditRecipeFragment"
            app:destination="@id/editRecipeFragment" />
        <action
            android:id="@+id/goToHomeFragment"
            app:destination="@id/homeFragment" />
        <argument
            android:name="recipe"
            app:argType="com.example.thatshot.domain.model.Recipe" />
    </fragment>
    <fragment
        android:id="@+id/editRecipeFragment"
        android:name="com.example.thatshot.view.edit_recipe.EditRecipeFragment"
        android:label="Edit Recipe"
        tools:layout="@layout/fragment_edit_recipe">
        <action
            android:id="@+id/goToHomeFragment"
            app:destination="@id/homeFragment" />
        <argument
            android:name="recipe"
            app:argType="com.example.thatshot.domain.model.Recipe" />
    </fragment>

</navigation>