<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.thatshot.view.frags.HomeFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_homeFragment_to_addRecipeFragment"
            app:destination="@id/addRecipeFragment" />
        <action
            android:id="@+id/action_homeFragment_to_viewRecipeFragment"
            app:destination="@id/viewRecipeFragment" />
    </fragment>
    <fragment
        android:id="@+id/addRecipeFragment"
        android:name="com.example.thatshot.view.frags.AddRecipeFragment"
        android:label="@string/add_recipe"
        tools:layout="@layout/fragment_add_recipe">
        <action
            android:id="@+id/goToHomeFragment"
            app:destination="@id/homeFragment" />
        <argument
            android:name="recipeId"
            app:argType="integer" />
    </fragment>
    <fragment
        android:id="@+id/viewRecipeFragment"
        android:name="com.example.thatshot.view.frags.ViewRecipeFragment"
        android:label="View Recipe"
        tools:layout="@layout/fragment_view_recipe">
        <action
            android:id="@+id/goToHomeFragment"
            app:destination="@id/homeFragment" />
        <argument
            android:name="recipe"
            app:argType="com.example.thatshot.domain.models.Recipe" />
        <action
            android:id="@+id/action_viewRecipeFragment_to_editRecipeFragment"
            app:destination="@id/editRecipeFragment" />
    </fragment>
    <fragment
        android:id="@+id/editRecipeFragment"
        android:name="com.example.thatshot.view.frags.EditRecipeFragment"
        android:label="Edit Recipe"
        tools:layout="@layout/fragment_edit_recipe">
        <action
            android:id="@+id/goToHomeFragment"
            app:destination="@id/homeFragment" />
        <argument
            android:name="recipe"
            app:argType="com.example.thatshot.domain.models.Recipe" />
    </fragment>

</navigation>